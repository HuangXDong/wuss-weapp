<w-scrollable-tab-view
 bind:onChange="handleScrollableChange"
 options="{{ options }}"
 tabsLineSize="1"
 tabsActiveColor="#ff9900"
>
	<scroll-view
	 scroll-y
	 wx:for="{{ options }}"
	 wx:key="{{ index }}"
	 slot="{{ item }}"
	 class="w-scrollable-tab-view-container"
	>
		<w-cell-group>
			<w-cell
			 highlight
			 wx:for="{{ 20 }}"
			 wx:key="child"
			 wx:for-index="child"
			 wx:for-item="childItem"
			 label="列表 {{ child+1 }}"
			 content="你好，我是{{ item }}页面"
			/>
		</w-cell-group>
	</scroll-view>
</w-scrollable-tab-view>

